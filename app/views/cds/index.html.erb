<%# Banner %>
<div class="home-banner vh-100" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1519677584237-752f8853252e?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8OTB8fG11c2ljfGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=600&q=60);">
  <div>
    <h1 style="text-transform:uppercase;">Your CDs</h1>
  </div>
  <%= link_to "Add your CDs", new_cd_path, class: "btn btn-flat" %>
</div>

<%# List %>
<div class="container">
    <div class="cards">
      <% @cds.each do |cd| %>
          <%= link_to cd_path(cd), class:"text-decoration-none" do %>
            <div class="card-category">
              <%= cd.photo.attached? ? (cl_image_tag cd.photo.key, crop: :fill, class: "spinhov" ) : image_tag(asset_path('doge.png'),  class:"spinhov") %>
              <p><%= cd.name %></p>
            </div>
          <% end %>
      <% end %>
    </div>
</div>
