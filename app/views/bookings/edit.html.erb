<%# Banner %>
<div class="book-edit-banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1615716175455-9a098e2388be?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTR8fGxpZ2h0JTIwZ3JlZW58ZW58MHx8MHx8&auto=format&fit=crop&w=600&q=60);">
  <h1 style="text-transform:uppercase;" >Edit your CD</h1>

<%# Form %>
  <div class="container">
    <%= simple_form_for(@booking) do |f| %>
      <%= f.input :start_time %>
      <%= f.input :end_time %>
      <%= f.submit value: "Update", class:"btn btn-flat" %>
      <%= link_to "Back to Bookings", "/bookings", class: "btn btn-flat" %>
    <% end %>
  </div>
</div>
